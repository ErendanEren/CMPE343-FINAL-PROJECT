<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Sign Up">
        <font>
            <Font size="20.0" />
        </font>
    </Label>

    <TextField fx:id="usernameField" promptText="Username (Unique)" maxWidth="300" />
    <PasswordField fx:id="passwordField" promptText="Password (min 4 chars)" maxWidth="300" />
    <TextField fx:id="fullNameField" promptText="Full Name" maxWidth="300" />
    <TextField fx:id="phoneField" promptText="Phone" maxWidth="300" />
    <TextField fx:id="emailField" promptText="Email" maxWidth="300" />
    <TextArea fx:id="addressArea" promptText="Address" maxWidth="300" prefHeight="80"/>
    
    <Label fx:id="statusLabel" textFill="BLUE" />

    <Button text="Register" onAction="#handleRegister" prefWidth="100"/>
    <Button text="Back to Login" onAction="#handleBack" prefWidth="100"/>
</VBox>
