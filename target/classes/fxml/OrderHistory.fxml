        <VBox spacing="10.0" style="-fx-background-color: #ecf0f1;" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="historyTable" prefHeight="400.0" prefWidth="900.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
