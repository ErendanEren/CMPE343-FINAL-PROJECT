                <MFXButton onAction="#handleViewInvoice" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #34495e; -fx-text-fill: white;" text="View Invoice (Log)">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </MFXButton>
            </children>
            <padding>
                <Insets right="30.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
