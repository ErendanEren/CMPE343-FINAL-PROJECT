<BorderPane prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CustomerController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="welcomeLabel" text="Welcome, User" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <TextField fx:id="searchField" promptText="Search products..." prefWidth="250.0" style="-fx-background-radius: 15;" />

                <Button mnemonicParsing="false" onAction="#handleShowCart" style="-fx-background-color: #f1c40f; -fx-text-fill: #2c3e50; -fx-background-radius: 15; -fx-cursor: hand;" text="ðŸ›’ My Cart">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleShowProfile" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 15; -fx-cursor: hand;" text="ðŸ‘¤ Profile">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 15; -fx-cursor: hand;" text="Logout">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER">
            <content>
                <VBox spacing="10.0">
                    <children>

                        <TitledPane animated="false" text="ðŸ¥¦ Vegetables" textFill="#27ae60">
                            <content>
                                <FlowPane fx:id="veggieContainer" hgap="20.0" vgap="20.0" prefWrapLength="800.0" style="-fx-background-color: #f9f9f9;">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </FlowPane>
                            </content>
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </TitledPane>

                        <TitledPane animated="false" text="ðŸŽ Fruits" textFill="#e67e22">
                            <content>
                                <FlowPane fx:id="fruitContainer" hgap="20.0" vgap="20.0" prefWrapLength="800.0" style="-fx-background-color: #f9f9f9;">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </FlowPane>
                            </content>
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </TitledPane>

                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>