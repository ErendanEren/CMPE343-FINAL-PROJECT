<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox layoutX="20.0" layoutY="20.0" prefHeight="540.0" prefWidth="960.0" spacing="15.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MessagingController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #ffffff; -fx-padding: 10; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <children>
                <VBox>
                    <children>
                        <Label text="Greengrocer Communication Center" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblContactName" text="Sohbet Edilen: Seçilmedi" textFill="#95a5a6">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#handleRefresh" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Yenile" />
            </children>
        </HBox>

        <ListView fx:id="messageListView" style="-fx-background-radius: 5; -fx-border-color: #dcdde1; -fx-border-radius: 5;" VBox.vgrow="ALWAYS" />

        <HBox spacing="10.0">
            <children>
                <TextField fx:id="txtMessageInput" prefHeight="45.0" promptText="Mesajınızı buraya yazın..." style="-fx-background-radius: 20; -fx-padding: 0 15 0 15;" HBox.hgrow="ALWAYS" />
                <Button fx:id="btnSend" defaultButton="true" mnemonicParsing="false" onAction="#handleSend" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;" text="GÖNDER" />
            </children>
        </HBox>
    </children>
</VBox>
