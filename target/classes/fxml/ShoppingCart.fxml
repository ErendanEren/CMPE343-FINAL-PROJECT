<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ShoppingCartController">
    <top>
        <VBox style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0">
                    <children>
                        <Label text="Shopping Cart" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Bold" size="24.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="totalPriceLabel" text="Total: 0.00 TL" textFill="#ecf0f1">
                            <font>
                                <Font name="Segoe UI Semibold" size="20.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets left="30.0" right="30.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0" style="-fx-background-color: #ecf0f1;" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="cartTable" prefHeight="400.0" prefWidth="900.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Product Name" />
                        <TableColumn fx:id="amountColumn" prefWidth="150.0" text="Amount (kg)" />
                        <TableColumn fx:id="priceColumn" prefWidth="150.0" text="Unit Price" />
                        <TableColumn fx:id="totalColumn" prefWidth="150.0" text="Line Total" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="80.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 0, -5, 0, 0);" BorderPane.alignment="CENTER">
            <children>
                <MFXButton onAction="#handleBack" prefHeight="40.0" prefWidth="180.0" style="-fx-border-color: #7f8c8d; -fx-text-fill: #7f8c8d;" text="Continue Shopping">
                    <font>
                        <Font size="14.0" />
                    </font>
                </MFXButton>
                <MFXButton onAction="#handleRemoveItem" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Remove Selected">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </MFXButton>
                <MFXButton onAction="#handleCheckout" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Checkout &amp; Pay">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </MFXButton>
            </children>
            <padding>
                <Insets right="30.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
