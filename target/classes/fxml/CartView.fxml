<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CartViewController">
    <center>
        <TableView fx:id="cartTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Product Name" />
                <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount (kg)" />
                <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Unit Price" />
                <TableColumn fx:id="totalColumn" prefWidth="100.0" text="Line Total" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <MFXTextField fx:id="txtCouponCode" floatingText="Coupon Code" prefWidth="150.0" />
                        <MFXButton fx:id="btnApplyCoupon" onAction="#handleApplyCoupon" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Apply Coupon" />
                    </children>
                </HBox>
                <Label fx:id="lblCouponMessage" />

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Label text="Delivery Date:" />
                        <DatePicker fx:id="datePickerDelivery" prefWidth="120.0" />
                        <Label text="Time:" />
                        <ComboBox fx:id="comboDeliveryTime" prefWidth="120.0" />
                    </children>
                </HBox>

                <Label fx:id="totalPriceLabel" text="Total: 0.00 TL">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleBack" text="Continue Shopping" />
                        <Button mnemonicParsing="false" onAction="#handleRemoveItem" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Remove Selected" />
                        <Button mnemonicParsing="false" onAction="#handleCheckout" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Checkout &amp; Pay" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>
    </bottom>
    <top>
        <Label text="Your Shopping Cart" BorderPane.alignment="CENTER_LEFT">
            <font>
                <Font size="20.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" top="10.0" />
            </padding>
        </Label>
    </top>
</BorderPane>