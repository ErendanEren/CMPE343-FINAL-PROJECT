    <top>
        <VBox style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="80.0">
                    <children>
                        <Label text="My Profile" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets left="30.0" />
                    </padding>
