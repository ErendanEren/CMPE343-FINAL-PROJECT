<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="540.0" prefWidth="960.0" spacing="10" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CarrierController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Group09 Greengrocer - Carrier Dashboard" />

    <TabPane fx:id="carrierTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">

        <Tab text="Available Orders">
            <VBox spacing="10">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                <TableView fx:id="availableTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="80" text="Order ID" />
                        <TableColumn fx:id="colAddress" prefWidth="550" text="Customer Address" />
                        <TableColumn fx:id="colAmount" prefWidth="150" text="Total (VAT Inc.)" />
                    </columns>
                </TableView>
                <Button fx:id="btnPickUp" maxWidth="Infinity" onAction="#handlePickUp" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Pick Up Order" />
            </VBox>
        </Tab>

        <Tab text="My Active Orders">
            <VBox spacing="10">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                <TableView fx:id="activeTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colActiveId" prefWidth="80" text="Order ID" />
                        <TableColumn fx:id="colActiveAddress" prefWidth="750" text="Delivery Address" />
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <Button maxWidth="Infinity" onAction="#handleSendMessage" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;" text="Send Message to Customer" HBox.hgrow="ALWAYS" />
                    <Button maxWidth="Infinity" onAction="#handleDeliver" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" text="Mark as Delivered" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>
        </Tab>

        <Tab text="Completed Orders">
            <VBox spacing="10">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                <TableView fx:id="completedTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCompId" prefWidth="80" text="Order ID" />
                        <TableColumn fx:id="colCompAddress" prefWidth="430" text="Address" />
                        <TableColumn fx:id="colCompAmount" prefWidth="120" text="Total Paid" />
                        <TableColumn fx:id="colCompDeliveredAt" prefWidth="200" text="Delivery Date" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <Tab closable="false" text="My Ratings">
            <VBox spacing="10">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                <Label fx:id="lblAverageRating" style="-fx-font-weight: bold;" text="Average Rating: 0.0 / 5.0" />
                <ListView fx:id="ratingListView" VBox.vgrow="ALWAYS" />
            </VBox>
        </Tab>
    </TabPane>
</VBox>